            "windows": {
                "name": "Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/build/${relativeFileDirname}.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "c:/msys64/mingw64/bin/gdb.exe",
