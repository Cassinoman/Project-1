                    }
                ]
            },
            "osx": {
                "name": "Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/build/${relativeFileDirname}",
                "MIMode": "lldb",
            },
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
